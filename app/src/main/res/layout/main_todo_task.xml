<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                android:paddingTop="@dimen/main_todo_item_padding_top"
                android:paddingRight="@dimen/main_todo_item_padding_left"
                android:paddingBottom="@dimen/main_todo_item_padding_top"
                android:paddingLeft="@dimen/main_todo_item_padding_left"
                android:layout_marginLeft="@dimen/main_todo_item_margin_left"
                android:layout_marginRight="@dimen/main_todo_item_margin_left"
                android:layout_marginBottom="@dimen/main_todo_item_margin_top">

    <fr.skyost.skylist.view.ColorCircleView
        android:id="@+id/main_todo_colorcircle"
        android:layout_width="@dimen/main_todo_colorcircle_size"
        android:layout_height="@dimen/main_todo_colorcircle_size"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="@dimen/main_todo_item_padding_left"
        android:layout_marginEnd="@dimen/main_todo_item_padding_left"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/main_todo_colorcircle"
        android:layout_toEndOf="@+id/main_todo_colorcircle">

        <TextView
            android:id="@+id/main_todo_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/main_todo_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_todo_description"/>
    </RelativeLayout>

</RelativeLayout>